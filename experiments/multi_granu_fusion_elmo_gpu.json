{
  "dataset_reader": {
    "type": "squad",
    "lazy": true,
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
      "elmo": {
        "type": "elmo_characters"
      },
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "byte_encoding": "utf-8",
          "start_tokens": [259],
          "end_tokens": [260]
        }
      }
    }
  },
  "train_data_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/squad/squad-train-v1.1.json",
  "validation_data_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/squad/squad-dev-v1.1.json",
  "model": {
    "type": "multi-fusion-elmo",
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "tokens": ["tokens"],
        "token_characters": ["token_characters"]
      },
      "token_embedders": {
	    "tokens": {
          "type": "embedding",
          "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": false
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "num_embeddings": 262,
            "embedding_dim": 16
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 16,
            "num_filters": 100,
            "ngram_filter_sizes": [5]
          },
          "dropout": 0.2
        }
      }
    },
    "text_field_embedder_elmo": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "elmo": ["elmo"]
      },
      "token_embedders": {
        "elmo": {
          "type": "elmo_token_embedder",
          "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_options.json",
          "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5",
          "do_layer_norm": true,
          "requires_grad": true,
          "dropout": 0.5
        }
      }
    },
    "highway_dim": 200,
    "highway_elmo_dim": 256,
    "num_highway_layers": 2,
    "phrase_layer": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 200,
      "num_layers": 1,
      "dropout": 0.2
    },
    "soft_align_matrix_attention": {
      "input_dim": 656,
      "hidden_dim": 400,
      "activation": "relu"
    },
    "self_matrix_attention": {
      "matrix_1_dim": 656,
      "matrix_2_dim": 656,
      "activation": "relu"
    },
    "passage_modeling_layer": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 656,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.2
    },
    "question_modeling_layer": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 656,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.2
    },
    "question_encoding_layer": {
      "type": "weighted-boe",
      "embedding_dim": 200
    },
    "passage_similarity_function": {
      "type": "linear",
      "combination": "x,y,x*y,x-y",
      "tensor_1_dim": 656,
      "tensor_2_dim": 656,
      "activation": "sigmoid"
    },
    "question_similarity_function": {
      "type": "linear",
      "combination": "x,y,x*y,x-y",
      "tensor_1_dim": 656,
      "tensor_2_dim": 656,
      "activation": "sigmoid"
    },
    "dropout": 0.2
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 500,
    "sorting_keys": [["passage", "num_tokens"], ["question", "num_tokens"]],
    "batch_size": 30
  },

  "trainer": {
    "num_epochs": 40,
    "grad_norm": 5.0,
    "patience": 10,
    "validation_metric": "+em",
    "cuda_device": 0,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "optimizer": {
      "type": "adadelta"
    }
  }
}

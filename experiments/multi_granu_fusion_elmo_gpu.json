{
  "dataset_reader": {
    "type": "squad",
    "lazy": true,
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      }
    }
  },
  "train_data_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/squad/squad-train-v1.1.json",
  "validation_data_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/squad/squad-dev-v1.1.json",
  "model": {
    "type": "multi-fusion",
    "text_field_embedder": {
      "elmo": {
        "type": "elmo_token_embedder",
        "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_options.json",
        "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x1024_128_2048cnn_1xhighway/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5",
        "do_layer_norm": false,
        "dropout": 0.5
      }
    },
    "phrase_layer": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 256,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "num_highway_layers": 1,
    "soft_align_matrix_attention": {
      "input_dim": 200,
      "hidden_dim": 200,
      "activation": "relu"
    },
    "self_matrix_attention": {
      "matrix_1_dim": 200,
      "matrix_2_dim": 200,
      "activation": "relu"
    },
    "passage_modeling_layer": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.2
    },
    "question_modeling_layer": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.2
    },
    "question_encoding_layer": {
      "type": "weighted-boe",
      "embedding_dim": 200
    },
    "passage_similarity_function": {
      "type": "linear",
      "combination": "x,y,x*y,x-y",
      "tensor_1_dim": 200,
      "tensor_2_dim": 200,
      "activation": "sigmoid"
    },
    "question_similarity_function": {
      "type": "linear",
      "combination": "x,y,x*y,x-y",
      "tensor_1_dim": 200,
      "tensor_2_dim": 200,
      "activation": "sigmoid"
    },
    "dropout": 0.2
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },

  "trainer": {
    "num_epochs": 20,
    "grad_norm": 5.0,
    "patience": 10,
    "validation_metric": "+em",
    "cuda_device": 0,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.9]
    }
  }
}

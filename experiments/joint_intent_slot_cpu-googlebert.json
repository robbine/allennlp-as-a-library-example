{
    "dataset_reader": {
        "type": "intent_slot_reader",
        "lazy": false,
        "max_seq_length": 64,
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        },
        "tokenizer": {
            "type": "word",
            "start_tokens": [
                "[CLS]",
                "START",
            ],
            "end_tokens": [
                "END"
            ],
            "word_splitter": {
                "type": "bert-basic",
                "do_lower_case": true
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 256,
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "joint_intent_slot-googlebert",
        "label_encoding": "BIO",
        "constrain_crf_decoding": true,
        "calculate_span_f1": true,
        "include_start_end_transitions": true,
        "wait_user_input": true,
        "initializer": [],
        "text_field_embedder": {
            "type": "basic_v2",
            "tokens": {
                "type": "bert-pretrained",
                "pretrained_model": "/home/icepine.hans/data/bert-base-chinese.tar.gz",
                "requires_grad": true
            },
            "use_fp16": false
        },
        "use_fp16": false
    },
    "train_data_path": "/home/icepine.hans/data/bert_intent_slot_data.sample.txt",
    "validation_data_path": "/home/icepine.hans/data/bert_intent_slot_data.sample.txt",
    "trainer": {
        "cuda_device": -1,
        "grad_clipping": 1.0,
        "num_epochs": 40,
        "optimizer": {
            "type": "bert_adam",
            "lr": 0.00001
        },
        "patience": 3,
        "validation_metric": "-loss"
    }
}

{
    "dataset_reader": {
        "type": "intent_slot_reader",
        "lazy": false,
        "max_seq_length": 64,
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        },
        "tokenizer": {
            "type": "jieba",
            "start_tokens": [
                "[CLS]",
                "START",
            ],
            "end_tokens": [
                "END"
            ],
            "word_splitter": {
                "type": "jieba",
                "pos_tags": true
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 256,
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "joint_intent_slot",
        "label_encoding": "BIO",
        "constrain_crf_decoding": true,
        "calculate_span_f1": true,
        "include_start_end_transitions": true,
        "wait_user_input": false,
        "initializer": [],
        "text_field_embedder": {
            "type": "basic_v2",
            "tokens": {
                "type": "embedding_v2",
                "pretrained_file": "/home/icepine.hans/data/ChineseEmbedding.tar.gz",
                "embedding_dim": 200,
                "padding_index": 0,
                "trainable": true
            },
            "use_fp16": false
        },
        "transformer": {
            "type": "transformer",
            "attention_dropout_prob": 0.1,
            "attention_type": "dot_product",
            "dropout_prob": 0.1,
            "input_size": 200,
            "intermediate_act_fn": "gelu",
            "intermediate_size": 3072,
            "key_depth": 1024,
            "max_position_embeddings": 256,
            "memory_size": 200,
            "num_heads": 16,
            "num_hidden_layers": 16,
            "type_vocab_size": 2,
            "use_fp16": false,
            "value_depth": 1024,
            "use_token_type": false,
            "use_position_embeddings": true,
        },
        "use_fp16": false
    },
    "train_data_path": "/home/icepine.hans/data/bert_intent_slot_data.sample.txt",
    "validation_data_path": "/home/icepine.hans/data/bert_intent_slot_data.validate.txt",
    "trainer": {
        "cuda_device": -1,
        "grad_clipping": 1.0,
        "num_epochs": 60,
        "optimizer": {
            "type": "bert_adam",
            "lr": 0.00001
        },
        "patience": 3,
        "validation_metric": "-loss"
    }
}
